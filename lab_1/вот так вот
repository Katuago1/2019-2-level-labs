def filter_stop_words(super_dict, stop_words):
    dict_filter = {}
    if super_dict is not None and stop_words is not None:
        for k,v in super_dict.items():
            if k == str(k):
                if k not in stop_words:
                    dict_filter.update({k: v})
    return dict_filter



